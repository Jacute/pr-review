                "pull_request_id": {
                    "type": "string"
                }
            }
        },
        "dto.ReassignPRResponse": {
            "type": "object",
            "properties": {
                "pr": {
                    "$ref": "#/definitions/models.PullRequest"
                },
                "replaced_by": {
